<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dip"
    android:paddingBottom="15dip"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/iv_ce_ico"
        android:layout_width="100dip"
        android:layout_height="100dip"
        android:scaleType="centerInside"
        android:src="@mipmap/shoppingmr" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip">

            <TextView
                android:id="@+id/tv_ce_name"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:lines="1"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_16sp" />

            <TextView
                android:id="@+id/tv_ce_sold_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color51"
                android:textSize="@dimen/text_12sp" />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_ce_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="6dip"
            android:paddingRight="6dip"
            android:paddingTop="3dip"
            android:paddingBottom="3dip"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/color50"
            android:layout_marginTop="10dip"
            android:background="@drawable/bg_shape_item_ce1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip">

            <TextView
                android:id="@+id/tv_ce_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color50"
                android:textSize="@dimen/text_12sp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color50"
                android:textSize="@dimen/text_14sp"
                android:text="@string/tv146"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingTop="8dip"
                android:paddingBottom="8dip"
                android:paddingLeft="13dip"
                android:paddingRight="13dip"
                android:background="@drawable/bg_shape_item_credits_exchange"
                />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>