<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="45dip"
    android:paddingRight="45dip">

    <com.system.technologyinformation.widget.Linearlayout_3_4
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="2"
            android:background="@mipmap/bg_fee_exemptions1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="恭喜您获得"
                android:textColor="@color/white"
                android:textSize="@dimen/text_24sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:background="@mipmap/bg_fee_exemptions2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dip"
                android:layout_marginRight="45dip"
                android:background="@drawable/white_background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="还需支付¥0.00"
                    android:textColor="@color/color37"
                    android:textSize="@dimen/text_16sp" />

                <TextView
                    android:id="@+id/tv_content1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dip"
                    android:background="@null"
                    android:gravity="center"
                    android:text="还需支付¥0.00"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4"
            android:background="@mipmap/bg_fee_exemptions3">

            <TextView
                android:id="@+id/btn_dialog_confirm"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:background="@drawable/bg_shape_pay_preferential"
                android:gravity="center"
                android:text="去支付"
                android:textColor="@color/color61" />
        </RelativeLayout>
    </com.system.technologyinformation.widget.Linearlayout_3_4>


</LinearLayout>