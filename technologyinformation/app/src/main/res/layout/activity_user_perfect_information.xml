<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color39"
    android:orientation="vertical"
    tools:context=".module.ui.users.UserPerfectInformationActivity">

    <View
        android:id="@+id/status_bar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_statue_height"
        android:background="@color/white" />

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginTop="10dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rel_ico"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dip"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="@string/tv148"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />

                <com.system.technologyinformation.widget.CircleImageView
                    android:id="@+id/iv_userico"
                    android:layout_width="40dip"
                    android:layout_height="40dip"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_userico_zs"
                    android:src="@mipmap/userphotomr" />
                <ImageView
                    android:id="@+id/iv_userico_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/divide"></View>


            <RelativeLayout
                android:id="@+id/rel_name"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/tv55"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp" />
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_toLeftOf="@+id/iv_user_name_zs"
                    android:textColor="@color/tabwd"
                    android:hint="@string/tv67"
                    android:textColorHighlight="@color/tabwd"
                    android:textSize="@dimen/text_16sp" />
                <ImageView
                    android:id="@+id/iv_user_name_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/divide"></View>

            <RelativeLayout
                android:id="@+id/rel_sex"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/tv56"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    />
                <TextView
                    android:id="@+id/tv_user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:layout_toLeftOf="@+id/iv_user_sex_zs"
                    android:textColor="@color/tabwd"
                    android:hint="@string/tv67"
                    android:textColorHighlight="@color/tabwd"
                    android:textSize="@dimen/text_16sp" />
                <ImageView
                    android:id="@+id/iv_user_sex_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/divide"></View>

            <RelativeLayout
                android:id="@+id/rel_user_birthday"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="@string/tv59"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    />
                <TextView
                    android:id="@+id/tv_user_birthday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="@string/tv67"
                    android:textColorHighlight="@color/tabwd"
                    android:layout_toLeftOf="@+id/iv_user_birthday_zs"
                    android:textColor="@color/tabwd"
                    android:textSize="@dimen/text_16sp" />
                <ImageView
                    android:id="@+id/iv_user_birthday_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:layout_marginLeft="15dip"
                android:layout_marginRight="15dip"
                android:background="@color/divide"></View>

            <RelativeLayout
                android:id="@+id/rel_user_address"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="@string/tv57"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    />
                <TextView
                    android:id="@+id/tv_user_address"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="@string/tv67"
                    android:textColorHighlight="@color/tabwd"
                    android:layout_toLeftOf="@+id/iv_user_address_zs"
                    android:textColor="@color/tabwd"
                    android:textSize="@dimen/text_16sp" />
                <ImageView
                    android:id="@+id/iv_user_address_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="@color/divide"></View>

            <RelativeLayout
                android:id="@+id/rel_user_construction_site"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="@string/tv58"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    />
                <TextView
                    android:id="@+id/tv_user_construction_site"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxWidth="200dip"
                    android:gravity="center_vertical"
                    android:hint="@string/tv67"
                    android:layout_marginLeft="20dip"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textColorHighlight="@color/tabwd"
                    android:layout_toLeftOf="@+id/iv_user_construction_site_zs"
                    android:textColor="@color/tabwd"
                    android:textSize="@dimen/text_16sp" />
                <ImageView
                    android:id="@+id/iv_user_construction_site_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="15dip"
                android:background="@color/divide"></View>

            <RelativeLayout
                android:id="@+id/rel_user_work"
                android:layout_width="match_parent"
                android:paddingLeft="15dip"
                android:paddingRight="15dip"
                android:background="@color/white"
                android:layout_height="60dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:text="@string/tv60"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16sp"
                    />
                <TextView
                    android:id="@+id/tv_user_work"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:hint="@string/tv67"
                    android:textColorHighlight="@color/tabwd"
                    android:layout_toLeftOf="@+id/iv_user_work_zs"
                    android:textColor="@color/tabwd"
                    android:textSize="@dimen/text_16sp" />
                <ImageView
                    android:id="@+id/iv_user_work_zs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/right_go"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>