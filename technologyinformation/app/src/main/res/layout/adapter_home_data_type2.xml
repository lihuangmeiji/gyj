<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dip"
    android:paddingBottom="10dip">

    <TextView
        android:id="@+id/tv_hometitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="@string/tv3"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <com.system.technologyinformation.widget.ImageView_16_9
            android:id="@+id/tv_homeimg1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_zw" />

        <com.system.technologyinformation.widget.ImageView_16_9
            android:id="@+id/tv_homeimg2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_zw" />

        <com.system.technologyinformation.widget.ImageView_16_9
            android:id="@+id/tv_homeimg3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/img_zw" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_hometype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_hometype"
            android:paddingBottom="1dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="1dip"
            android:text="@string/tv26"
            android:textColor="@color/color4"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_homename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv12"
            android:layout_marginLeft="10dip"
            android:textColor="@color/color4"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_hometime"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:text="19分钟之前"
            android:textColor="@color/color4"
            android:textSize="@dimen/text_14sp" />

        <TextView
            android:id="@+id/tv_jf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+10积分"
            android:visibility="gone"
            android:textColor="@color/color5"
            android:textSize="@dimen/text_14sp" />
    </LinearLayout>
</LinearLayout>