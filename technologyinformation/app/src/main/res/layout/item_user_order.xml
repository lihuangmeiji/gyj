<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dip">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_order_id"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="@dimen/text_12sp"
            android:textColor="@color/color9"/>
        <ImageView
            android:id="@+id/iv_order_id"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:scaleType="center"
            android:layout_marginLeft="15dip"
            android:src="@mipmap/order_id_copy"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:background="#E6E6E6"></View>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center_vertical|right">

        <TextView
            android:id="@+id/tv_uo_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_shape_item_ce4"
            android:paddingBottom="2dip"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:paddingTop="2dip"
            android:text=""
            android:textColor="@color/color62"
            android:textSize="@dimen/text_10sp" />

        <TextView
            android:id="@+id/tv_uo_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:textColor="@color/black"
            android:textSize="@dimen/text_12sp" />
    </LinearLayout>

    <View
        android:id="@+id/v_live"
        android:layout_width="match_parent"
        android:layout_height="0.1dip"
        android:layout_marginTop="15dip"
        android:background="#E6E6E6"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_order_c_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color9"
                android:textSize="@dimen/text_11sp" />

            <TextView
                android:id="@+id/tv_order_l_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_order_c_time"
                android:layout_marginTop="5dip"
                android:textColor="@color/color9"
                android:textSize="@dimen/text_11sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_uo_operation1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@drawable/bg_shape_order1"
            android:paddingBottom="8dip"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:paddingTop="8dip"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/text_13sp" />

        <TextView
            android:id="@+id/tv_uo_operation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="15dip"
            android:background="@drawable/bg_shape_order"
            android:paddingBottom="8dip"
            android:paddingLeft="13dip"
            android:paddingRight="13dip"
            android:paddingTop="8dip"
            android:text=""
            android:textColor="@color/color37"
            android:textSize="@dimen/text_13sp" />
    </LinearLayout>
</LinearLayout>